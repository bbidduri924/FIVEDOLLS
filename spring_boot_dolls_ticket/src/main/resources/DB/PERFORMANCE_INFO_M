CREATE TABLE C##FIVEDOLLS.PERFORMANCE_INFO_M
(
    PERFORMANCE_ID                  VARCHAR2(20) NOT NULL,
    PERFORMANCE_KIND_CD             VARCHAR2(3),
    PERFORMANCE_RATING_CODE         NUMBER(2),
    PERFORMANCE_NAME                VARCHAR2(50),
    PERFORMANCE_PRICE               NUMBER(20),
    PERFORMANCE_ZIPCODE             VARCHAR2(8),
    PERFORMANCE_ADDRESS             VARCHAR2(80),
    PERFORMANCE_DETAILADDRESS       VARCHAR2(50),
    PERFORMANCE_DATE                VARCHAR2(30),
    RESERVATION_OPEN_EXPECTED_DATE  VARCHAR2(30),
    PERFORMANCE_IMAGE_PATH          VARCHAR2(200),
    FIRST_CHANGE_DATE               DATE,
    LAST_CHANGE_DATE                DATE
)
TABLESPACE USERS
STORAGE
(
    INITIAL 64K
    NEXT 1M
)
NOCOMPRESS;

ALTER TABLE C##FIVEDOLLS.PERFORMANCE_INFO_M
ADD PRIMARY KEY (PERFORMANCE_ID);
